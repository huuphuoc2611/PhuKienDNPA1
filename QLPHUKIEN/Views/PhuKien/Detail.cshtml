@using QLPHUKIEN.Models
<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: white;
            color: red;
        }
</style>
@{ ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayouUser.cshtml"; }
<br />

<h2>Thông Tin Chi Tiết </h2>
<div>
    <div style="width:40%; float:left; border-left:dotted 1px; border-color:azure">
        <img src="~/images/@Model.Anhbia" width="100" />
    </div>
    <div style="width:60%;float:left;padding:10px">
        <h3 style="font-weight:bold; color:red"> Tên Linh Kiện: @Model.TenPK</h3>
        <p style="text-align:justify"> <span style="font-weight:bold">Mô tả:</span>@Model.Mota</p>
        <p style="font-weight:bold"> Giá bán: <span style="color:red; font-size:16px">@Model.Giaban VND</span></p>
        <p id="Datmua">
            <a href="@Url.Action("ThemGiohang","GioHang", new {@iMaPK = Model.MaPK, @strURL= Request.Url.ToString() })" class="list-group-item">
                ĐẶT MUA
            </a>
        </p>
    </div>
</div>




